doctype html
html
  head
    meta(charset="utf-8")
  body
    if user
      a(href="/auth/logout")=`Logout ${user.displayName}`
    else
      p: a(href="/auth/login") Login
      p: a(href="/auth/register") Register
    h1: a(href="/topic") Server Side Javascript

    ul
      each topic in topics
        li: a(href="/topic/" + topic.id)=topic.title

    block content
